{
  "name": "claystove",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liili-cn/claystove.git"
  },
  "homepage": "https://github.com/liili-cn/claystove#readme",
  "bugs": {
    "url": "https://github.com/liili-cn/claystove/issues",
    "email": "liili_cn@hotmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Liili",
    "email": "liili_cn@hotmail.com",
    "url": "https://github.com/liili-cn"
  },
  "scripts": {
    "build": "pnpm exec turbo run build",
    "cs": "pnpm exec changeset",
    "cz": "pnpm exec cz",
    "format": "pnpm exec prettier --ignore-unknown --write .",
    "hooks": "pnpm exec lefthook install",
    "lint": "pnpm exec redrun -s lint:*",
    "lint:step1": "pnpm exec oxlint --type-aware --fix .",
    "lint:step2": "pnpm exec knip --fix",
    "lint:step3": "pnpm exec manypkg fix",
    "lint:step4": "pnpm exec syncpack fix --dependency-types !peer"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@commitlint/cli": "20.1.0",
    "@liili-cn/commitlint-config": "workspace:*",
    "@liili-cn/oxlint-config": "workspace:*",
    "@liili-cn/prettier-config": "workspace:*",
    "@liili-cn/prettier-plugin-sort": "workspace:*",
    "@manypkg/cli": "0.25.1",
    "@types/node": "24.9.1",
    "commitizen": "4.3.1",
    "cz-git": "1.12.0",
    "knip": "5.73.3",
    "lefthook": "2.0.1",
    "oxlint": "1.29.0",
    "oxlint-tsgolint": "0.8.1",
    "prettier": "3.6.2",
    "redrun": "12.0.1",
    "syncpack": "14.0.0-alpha.32",
    "turbo": "2.6.0",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22.20.0"
  },
  "packageManager": "pnpm@10.18.3"
}
